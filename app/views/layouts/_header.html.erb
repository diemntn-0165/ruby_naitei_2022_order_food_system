<header id="header" class="header-scroll top-header headrom">
  <!-- .navbar -->
  <nav class="navbar navbar-dark">
    <div class="container">
      <button class="navbar-toggler hidden-lg-up" type="button" data-toggle="collapse" data-target="#mainNavbarCollapse">&#9776;</button>
      <%= link_to image_tag("food-picky-logo.png"), root_path, class:"navbar-brand" %>
      <div class="collapse navbar-toggleable-md  float-lg-right" id="mainNavbarCollapse">
        <ul class="nav navbar-nav">
          <li class="nav-item"> <%= link_to t(".home"), root_path, class:"nav-link active" %> </li>
          <li class="nav-item dropdown"> <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><%= t(".food") %></a>
              <div class="dropdown-menu"> <a class="dropdown-item" href="#"><%= t(".food_results") %></a></div>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item dropdown">
              <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                <%= current_user.name %>
              </a>
              <ul class="dropdown-menu">
                <li>
                  <%= link_to t(".orders"), orders_path, class:"dropdown-item" %>
                </li>
                <li><%= link_to t(".profile"), current_user, class:"dropdown-item" %></li>
                <li>
                <%= link_to t(".logout"), destroy_user_session_path, class:"dropdown-item" %>
                </li>
              </ul>
              <li class="nav-item"><%= link_to t(".cart"), carts_path, method: :get, class:"nav-link" %></li>
              <li class="nav-item custom-control-indicator"><span class="nav-item nav-cart-count"><%= get_cart_count_header %></span></li>
            </li>
          <% else %>
            <li class="nav-item"><%= link_to t(".login"), new_user_session_path, class:"nav-link" %></li>
          <% end %>
          <li class="nav-item"><%= link_to t(".en"), {locale: :en}, class: "nav-link" %></li>
          <li class="nav-item"><%= link_to t(".vi"), {locale: :vi}, class: "nav-link" %></li>
        </ul>
      </div>
    </div>
  </nav>
  <!-- /.navbar -->
</header>
