<% provide :title, t(".heading") %>
<div class="container user-container">
  <h1><%= t(".heading") %></h1>
  <div class="row">
    <%= form_for(@user) do |f| %>
      <%= render "shared/error_messages" %>
      <%= f.label :name, t(".form.name") %>
      <%= f.text_field :name, class: "form-control" %>
      <%= f.label :address, t(".form.address") %>
      <%= f.text_field :address, class: "form-control" %>
      <%= f.label :phone_number, t(".form.phone_number") %>
      <%= f.text_field :phone_number, class: "form-control" %>
      <%= f.label :email, t(".form.email") %>
      <%= f.email_field :email, class: "form-control" %>
      <%= f.label :password, t(".form.password") %>
      <%= f.password_field :password, class: "form-control" %>
      <%= f.label :password_confirmation, t(".form.password_confirmation")%>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <div class="submit">
        <%= f.submit t(".form.btn_submit"), class: "btn btn-primary" %>
      </div>
      <hr>
      <%= t(".form.have_account") %><%= link_to t(".form.login"), login_path %>
    <% end %>
  </div>
</div>
