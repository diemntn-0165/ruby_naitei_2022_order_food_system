<tr>
  <th scope="row"><%= product.id %></th>
  <td><%= product.name %></td>
  <td><%= product.price %></td>
  <td><%= product.quantity %></td>
  <td><%= image_tag product.image.url if product.image? %></td>
  <td><%= product.created_at.strftime(Settings.date_format) %></td>
  <td><%= product.updated_at.strftime(Settings.date_format) %></td>
  <td>
    <%= link_to t(".edit"), edit_admin_product_path(product), class: "btn btn-success btn_delete" %>
    <%= button_to t(".delete"), [:admin, product], method: :delete, class: "btn btn-danger btn_delete", data: {confirm: t(".confirm")} %>
  </td>
</tr>
